{
  "type": "contentView",
  "styles": {
    "backgroundColor": "systemBackground"
  },
  "subviews": [
    {
      "type": "stackView",
      "id": "mainStackView",
      "styles": {
        "axis": "vertical",
        "distribution": "fill",
        "alignment": "fill",
        "spacing": 16,
        "padding": {
          "top": 16,
          "left": 16,
          "bottom": 16,
          "right": 16
        }
      },
      "subviews": [
        {
          "type": "card",
          "id": "headerCard",
          "content": {
            "title": "Welcome to BDUI Demo",
            "subtitle": "This screen is built using Backend Driven UI",
            "style": "elevated"
          },
          "styles": {
            "cornerRadius": 12,
            "padding": {
              "top": 16,
              "left": 16,
              "bottom": 16,
              "right": 16
            }
          },
          "actions": {
            "tap": {
              "type": "custom",
              "payload": {
                "name": "headerTapped",
                "data": {
                  "message": "Header card was tapped"
                }
              }
            }
          }
        },
        {
          "type": "label",
          "content": {
            "text": "Below are examples of different UI components that can be created using BDUI:",
            "textColor": "label",
            "font": {
              "style": "headline",
              "weight": "medium"
            }
          },
          "styles": {
            "textAlignment": "left",
            "numberOfLines": 0
          }
        },
        {
          "type": "stackView",
          "styles": {
            "axis": "horizontal",
            "distribution": "fillEqually",
            "alignment": "fill",
            "spacing": 12
          },
          "subviews": [
            {
              "type": "button",
              "content": {
                "title": "Primary",
                "style": "primary"
              },
              "actions": {
                "tap": {
                  "type": "custom",
                  "payload": {
                    "name": "buttonTapped",
                    "data": {
                      "buttonType": "primary"
                    }
                  }
                }
              }
            },
            {
              "type": "button",
              "content": {
                "title": "Secondary",
                "style": "secondary"
              },
              "actions": {
                "tap": {
                  "type": "custom",
                  "payload": {
                    "name": "buttonTapped",
                    "data": {
                      "buttonType": "secondary"
                    }
                  }
                }
              }
            }
          ]
        },
        {
          "type": "textInput",
          "id": "emailInput",
          "content": {
            "placeholder": "Enter your email",
            "keyboardType": "emailAddress",
            "returnKeyType": "next"
          },
          "styles": {
            "borderStyle": "roundedRect",
            "height": 44
          }
        },
        {
          "type": "card",
          "content": {
            "title": "Items List",
            "style": "outlined"
          },
          "subviews": [
            {
              "type": "stackView",
              "styles": {
                "axis": "vertical",
                "distribution": "fill",
                "alignment": "fill",
                "spacing": 8
              },
              "subviews": [
                {
                  "type": "label",
                  "content": {
                    "text": "Item 1",
                    "textColor": "label"
                  }
                },
                {
                  "type": "label",
                  "content": {
                    "text": "Item 2",
                    "textColor": "label"
                  }
                },
                {
                  "type": "label",
                  "content": {
                    "text": "Item 3",
                    "textColor": "label"
                  }
                }
              ]
            }
          ]
        },
        {
          "type": "button",
          "content": {
            "title": "Navigate to Details",
            "style": "outlined"
          },
          "actions": {
            "tap": {
              "type": "navigate",
              "payload": {
                "route": "details",
                "parameters": {
                  "id": "12345",
                  "title": "Details Screen"
                }
              }
            }
          }
        },
        {
          "type": "button",
          "content": {
            "title": "Reload Screen",
            "style": "text"
          },
          "actions": {
            "tap": {
              "type": "reload"
            }
          }
        },
        {
          "type": "button",
          "content": {
            "title": "Dismiss",
            "style": "text"
          },
          "actions": {
            "tap": {
              "type": "dismiss",
              "payload": {
                "animated": true
              }
            }
          }
        }
      ]
    }
  ]
} 